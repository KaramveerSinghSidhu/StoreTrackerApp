<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>StoreTracker | 5501</title>
</head>
<body class="bg-warning">
    <div>
    <div class="row">
        <h1 class="col m-5">Store 5501</h1>
        <div class="p-5 col text-end">
            <div class="row">
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
                <h5 class="col pt-2"><%= username.name%></h5>
                <a class="col btn btn-dark" href="/logout">Sign out</a>
            </div>
        </div>
    </div>
    <div class="container">
        <nav>
            <ul class="row bg-dark">
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/home">New Sale</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/sales">Rep Sales</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/store">Store Sales</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/returns">Returns</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/logs">Logs</a></li>
            </ul>
        </nav>
    </div>
</div>
<div class="row m-5 text-center"><h2>Sale Logs</h2></div>
<div class="row m-5 text-center"><%= date %> ++ <%= strDate %></div>
<div class="row m-5 text-center"><%= date1 %> ++ <%= strDate %></div>
<div class="container mt-5">
    <div class="row ps-3 pt-3 pe-3 pb-1 text-center bg-secondary mt-5">
        <h5 class="col">Date</h5>
        <h5 class="col">Day</h5>
        <h5 class="col">By</h5>
        <h5 class="col">Action</h5>
        <h5 class="col">For</h5>
        <h5 class="col">Detail</h5>
    </div>
    <% mysales.forEach(sale => { %>
    <div class="bg-light mt-4">
        <div>
            <div class="row ps-3 pt-3 pe-3 pb-1 text-center bg-light">
                <h6 class="col mt-2"><%= sale.date %></h6>
                <h6 class="col mt-2"><%= sale.day %></h6>
                <h6 class="col mt-2"><%= sale.user %></h6>
                <h6 class="col mt-2"><%= sale.action %></h6>
                <h6 class="col mt-2"><%= sale.userFor %></h6>
                <a class="btn-dark mb-2 btn col" href="/sale/<%= sale.id%>">View</a>
            </div>
        </div>
    </div>
    <% }) %>
    <div class="row ps-3 pt-3 pe-3 pb-1 mt-4 mb-4 text-center bg-secondary">
        <h5 class="col">Total Weekly</h5>
        <h5 class="col"><%= username.name %></h5>
        <h5 class="col">Total Subs</h5>
        <h5 class="col">Accessories</h5>
        <h5 class="col">Term Subs</h5>
        <h5 class="col">FDP</h5>
        <h5 class="col">ARS</h5>
        <h5 class="col">FDP%</h5>
    </div>
</div>
</body>
</html>