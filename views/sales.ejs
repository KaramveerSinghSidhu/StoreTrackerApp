<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>StoreTracker | 5501</title>
</head>
<style>
    body{
        background: rgba(250, 220, 0, 1);
    }
</style>
<body class="">
    <div>
    <div class="row">
        <h1 class="col m-5">Store 5501</h1>
        <div class="p-5 col text-end">
            <div class="row">
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
                <h7 class="col pt-2"><%= username.name%></h7>
                <a class="col btn btn-dark" href="/logout">Sign out</a>
            </div>
        </div>
    </div>
    <div class="container">
        <nav>
            <ul class="row bg-dark">
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/home">New Sale</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/sales">Rep Sales</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/store">Store Sales</a></li>
                <li class="d-inline col"><a class="btn ps-4 p-3 pe-4 me-5 ms-5 col btn-dark" href="/returns">Returns</a></li>
            </ul>
        </nav>
    </div>
</div>
<div class="container">
    <h2 class="m-5 text-center ps-4">Rep Sales</h2>
    <div class="container row mt-4 mb-4 bg-dark p-2 ms-1">
        <% if (week - 1 == 0){ %>
            <div class="col"><a class="btn-secondary btn" href="/weekly/<%= user.username %>/<%= year - 1 %>/52">Last Week</a></div>
            <% } else { %>
                <div class="col"><a class="btn-secondary btn" href="/weekly/<%= user.username %>/<%= year %>/<%=week - 1%>">Last Week</a></div>
        <%}%>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <% if (week + 1 == 53){ %>
            <div class="col"><a class="btn-secondary btn" href="/weekly/<%= user.username %>/<%= year + 1 %>/1">Next Week</a></div>
            <% } else { %>
                <div class="col"><a class="btn-secondary btn" href="/weekly/<%= user.username %>/<%= year %>/<%=week + 1%>">Next Week</a></div>
        <%}%>
    </div>
    <div class="row ps-3 pt-3 pe-3 pb-1 text-center bg-secondary">
        <h7 class="col mt-2">Date</h7>
        <h7 class="col mt-2">Day</h7>
        <h7 class="col mt-2">Express</h7>
        <h7 class="col mt-2">Nac</h7>
        <h7 class="col mt-2">T-Nac</h7>
        <h7 class="col mt-2">HUP</h7>
        <h7 class="col mt-2">MBB</h7>
        <h7 class="col mt-2">T-MBB</h7>
        <h7 class="col mt-2">TVM%</h7>
        <h7 class="col mt-2">FDP</h7>
        <h7 class="col mt-2">ACC</h7>
        <h7 class="col mt-2">FDP%</h7>
        <h7 class="col mt-2">MC</h7>
        <% if(username.name == myweek.user) { %>
        <h7 class="col mt-2">Commission</h7>
        <%} else { %>
            <h7 class="col mt-2">Rep</h7>
        <%}%>
        <h7 class="col mt-2">Detail</h7>
    </div>
    <% mysales.forEach(sale => { %>
    <div class="bg-light mt-4">
        <div>
            <div class="row ps-3 pt-3 pe-3 pb-1 text-center bg-light">
                <h7 class="col mt-2 ms-0"><%= sale.date %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.day %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.express %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.nac %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.termNac %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.hup %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.mbb %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.termMbb %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.tvmAttach %>%</h7>
                <h7 class="col mt-2 ms-0"><%= sale.fdp %></h7>
                <h7 class="col mt-2 ms-0">$<%= sale.acc %></h7>
                <h7 class="col mt-2 ms-0"><%= sale.fdpAttach %>%</h7>
                <h7 class="col mt-2 ms-0"><%= sale.mc %></h7>
                <% if(username.name == sale.user) { %>
                    <h7 class="col mt-2 ms-0">$<%= sale.userCommission %></h7>
                    <%} else { %>
                        <h7 class="col mt-2 ms-0"><%= sale.user %></h7>
                    <%}%>
                <a class="btn-dark mb-2 btn col ms-0" href="/sale/<%= sale.id%>">View</a>
            </div>
        </div>
    </div>
    <% }) %>
    <div class="row ps-3 pt-3 pe-3 pb-1 mt-4 mb-4 text-center bg-secondary">
        <h7 class="col">Total</h7>
        <h7 class="col"><%= myweek.user %></h7>
        <h7 class="col"><%= myweek.express %></h7>
        <h7 class="col"><%= myweek.nac %></h7>
        <h7 class="col"><%= myweek.termNac %></h7>
        <h7 class="col"><%= myweek.hup %></h7>
        <h7 class="col"><%= myweek.mbb %></h7>
        <h7 class="col"><%= myweek.termMbb %></h7>
        <h7 class="col"><%= myweek.tvmAttach %>%</h7>
        <h7 class="col"><%= myweek.fdp %></h7>
        <h7 class="col">$<%= myweek.acc %></h7>
        <h7 class="col"><%= myweek.fdpAttach %>%</h7>
        <h7 class="col"><%= myweek.mc %></h7>
        <% if(username.name == myweek.user) { %>
            <h7 class="col">$<%= myweek.userCommission %></h7>
            <%} else {%>
                <h7 class="col"><%= myweek.userID %></h7>
            <%}%>
        <h7 class="col">Week: <%= myweek.week %></h7>
    </div>
</div>
</body>
</html>